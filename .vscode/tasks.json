{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++ アクティブなファイルのビルド",
			"command": "/usr/bin/g++",
			"args": [
				"-std=gnu++17",
				"-Wall",
				"-Wextra",
				"-O0",
				"-ggdb3",
				"-DONLINE_JUDGE",
				"-I/opt/boost/gcc/include",
				"-L/opt/boost/gcc/lib",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}.out"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "コンパイラ: /usr/bin/g++"
		}
	]
}